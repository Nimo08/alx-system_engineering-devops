#!/usr/bin/env bash
# Display information about subdomains
domain_func() {
	record=$(dig "$2"."$1" | grep -A1 'ANSWER SECTION:')
	echo "$2 $record" | awk -F' ' '{print "The subdomain "$1" is a "$2" record and points to "$3""}'

}

if [ "$#" -eq 2 ]; then
	domain_func "$1" "$2"
else
        subdomains=("www" "lb-01" "web-01" "web-02")
        for subdomain in "${subdomains[@]}"; do
	domain_func "$1" "$subdomain"
        done
fi
